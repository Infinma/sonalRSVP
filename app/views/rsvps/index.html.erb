<p id="notice"><%= notice %></p>

<h1>Listing Rsvps</h1>

<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Email</th>
      <th>Address</th>
      <th>Number</th>
      <th>Event</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rsvps.each do |rsvp| %>
      <tr>
        <td><%= rsvp.fname %></td>
        <td><%= rsvp.email %></td>
        <td><%= rsvp.address %></td>
        <td><%= rsvp.number %></td>
        <td><%= rsvp.event %></td>
        <td><%= rsvp.name %></td>
        <td><%= link_to 'Show', rsvp %></td>
        <td><%= link_to 'Edit', edit_rsvp_path(rsvp) %></td>
        <td><%= link_to 'Destroy', rsvp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

